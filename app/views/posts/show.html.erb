<div class="Rectangle_bus">
    <div class ="top-bar">
        <table id='busmove'>
            <tbody>
                <tr class="row">
                    <% for i in (1..20) %>
                        <% if i==@progress %>
                            <td class="one"></td>
                            <% next %>
                        <% elsif @significant.include?(i) %>
                            <td class="two"><%= link_to posts_show_path do %><%= image_tag 'YOUR IMAGE' %><% end %></td>
                        <% else %>
                            <td></td>
                        <% end %>
                    <% end %>
                    <div id="top_flag"><%= image_tag "flag.png"%></div>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!--회의록 파트-->

<div class="main_sentence2_record">
  <span class="blue">회의록</span>을 저장하고,<br><span class="blue">지난 회의록</span>을 확인해보세요.
</div>

<div id="anchor2" class="container-post">

	<!--지난 회의록, 회의록 목록-->
    <div class="date_nav">
          
            <p class="past"><%= link_to '지난 회의록', 'record/new' %></p>
          
          <% @posts.each do |post| %>
          <ul>
           <li><p class="date"><a href="/posts/show_edit/<%=post.id%>"><%=post.title%></a></p>
          <a href="/posts/destroy/<%=post.id %>"><button class="delete">&times;</span></a></li>
          </ul>
          <% end %>
          
    </div>

	

	<!--회의록 텍스트 입력-->
	<div class="textfield">
		<!-- 회의록 제목-->
		<form action="/posts/create" method="post">
			<div class="upper">
				<input name="title" id="title" type="text" placeholder="회의록 제목을 작성하세요." class="removeOnFocus">
				<button id="save" type="submit" >저장</button>
			</div>
			<!-- 회의록 내용-->
			<div class="notepad">
				<textarea name="content" id="field" type="text" placeholder="회의록을 작성하세요." class="removeOnFocus"></textarea>
			</div>
		</form>
	</div>
</div>

